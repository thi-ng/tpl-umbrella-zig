{
    "name": "@thi.ng/tpl-umbrella-zig",
    "version": "0.0.1",
    "description": "TODO",
    "repository": "https://github.com/thi-ng/tpl-umbrella-zig",
    "author": "Karsten Schmidt <k+npm@thi.ng>",
    "license": "MIT",
    "scripts": {
        "start": "yarn build:zig && vite --open",
        "build": "tsc && yarn build:zig && vite build --base='./'",
        "build:types": "npx wasm-api-bindgen -a wasm-types-analysis.json --lang ts -o src/generated/types.ts --lang zig -o zig/generated/types.zig src/typedefs.json",
        "build:zig": "zig build && wasm-opt src/main.wasm -o src/main.wasm -Oz && wasm-dis -o src/main.wast src/main.wasm",
        "preview": "vite preview --host --open"
    },
    "devDependencies": {
        "typescript": "^4.8.4",
        "vite": "^3.2.2"
    },
    "dependencies": {
        "@thi.ng/api": "^8.4.6",
        "@thi.ng/wasm-api": "^1.0.1",
        "@thi.ng/wasm-api-bindgen": "^0.2.0",
        "@thi.ng/wasm-api-dom": "^0.11.0",
        "@thi.ng/wasm-api-schedule": "^0.3.0"
    },
    "browser": {
        "process": false
    }
}
